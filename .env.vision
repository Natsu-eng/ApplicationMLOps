# Base de données séparée pour Computer Vision
MLFLOW_VISION_TRACKING_URI=postgresql+psycopg2://postgres:password@localhost:5432/mlflow_vision_db?client_encoding=utf8
MLFLOW_VISION_EXPERIMENT_NAME=computer_vision_experiments
MLFLOW_VISION_ENABLED=true

# Artifact Store (S3 ou local pour dev)
MLFLOW_VISION_ARTIFACT_STORE=./artifacts/computer_vision  # Dev: local
# MLFLOW_VISION_ARTIFACT_STORE=s3://my-cv-bucket  # Prod: S3

# Configuration spécifique Computer Vision
CV_MODEL_CHECKPOINT_DIR=./checkpoints/vision
CV_PREPROCESSOR_CACHE_DIR=./cache/preprocessors
CV_MAX_ARTIFACT_SIZE_MB=500

# S3 Configuration (si artifact store S3)
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_DEFAULT_REGION=us-east-1